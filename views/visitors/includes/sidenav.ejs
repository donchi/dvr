    </ul>
  </div>

  <script>
  document.addEventListener('DOMContentLoaded', ()=> {
    document.querySelectorAll('.sidenav-btn').forEach(button => {
      button.addEventListener('click', ()=>{
        
      // Hide all content first
      document.querySelectorAll('.nav-content').forEach(content => {
        content.style.display = 'none';
      });
      
      const dataNav = button.getAttribute('data-nav');
      
      // show selected element
      showNav(dataNav);
      })
    });

function showNav(dataNav) {
  const element = document.getElementById(dataNav);
  if (element) {
    element.style.display = 'block'; // or whatever display type you need
  } else {
    console.error(`Element with ID "${dataNav}" not found`);
  }
}
  })

  </script>