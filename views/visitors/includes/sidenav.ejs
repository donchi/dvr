      <li><button class="sidenav-btn" data-nav="update-visitor-info"><i class="fas fa-pen-to-square"></i> Update Details</button></li>
      <li><button  class="sidenav-btn" data-nav="recapture-photo"><i class="fas fa-camera-retro"></i> Re-capture Photo</button></li>
